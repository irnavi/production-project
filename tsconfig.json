      "noImplicitAny": true,
      "module": "ES2020",
      "target": "es5",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
    //   "baseUrl": ".",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "plugins": [
        {
        "name": "typescript-plugin-css-modules",
        // "cssModules.camelCase": true
        }
        ]

    },
    "ts-node": {
